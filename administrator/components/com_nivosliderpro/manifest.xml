<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="1.6.0" method="upgrade" client="admin">
    <name>com_nivosliderpro</name>
    <creationDate>May 2012</creationDate>
    <author>Unite CMS</author>
	<copyright>Copyright (C) 2012 UniteCMS.net, All rights reserved.</copyright>
	<license>GNU/GPLv3 http://www.gnu.org/licenses/gpl-3.0.html</license>
	<authorEmail>support@unitecms.net</authorEmail>
	<authorUrl>http://www.unitecms.net</authorUrl>
    <version>3.0.5</version>
	
	<description>
		Unite Nivo Slider Pro extension and module installation success!
	</description>
	
	<install>
		<sql>
            <file charset="utf8" driver="mysql">sql/install.sql</file>
        </sql>
    </install>
	
	<uninstall>
		<sql>
            <file charset="utf8" driver="mysql">sql/uninstall.sql</file>
        </sql>
    </uninstall>
		
	<media destination="com_nivosliderpro" folder="media">
		<filename>index.html</filename>
		<folder>cache</folder>
		<folder>assets</folder>
	</media>
	
	<files folder="site">
		<filename>index.html</filename>
		<filename>controller.php</filename>
		<filename>nivosliderpro.php</filename>
	</files>
	
    <administration>
    	
    	<menu img="components/com_nivosliderpro/assets/images/icon-16-nivopro.png">COM_NIVOSLIDERPRO</menu>
		
    	<files folder="admin">
        	<filename>nivosliderpro.php</filename>
            <filename>install.php</filename>
            <filename>controller.php</filename>
			<filename>includes.php</filename>
			<filename>config.xml</filename>
			<filename>index.html</filename>
			<filename>release_log.txt</filename>
			
			<folder>assets</folder>
			<folder>controllers</folder>
			<folder>helpers</folder>
			<folder>language</folder>
            <folder>models</folder>
			<folder>sql</folder>
            <folder>tables</folder>
            <folder>unitejoomla</folder>
            <folder>views</folder>
        </files>
        
    </administration>
	
	<modules>
		<module folder="modules" module="mod_unite_nivopro" name="Unite Nivo Slider Pro" />
	</modules>
	
	<scriptfile>install.php</scriptfile>
	
</extension>